<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kulitku" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/terracotta</item>
        <item name="colorPrimaryVariant">@color/coral</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/terracotta</item>
    </style>

    <style name="Theme.Kulitku" parent="Base.Theme.Kulitku" />
    <style name="Base.Theme.Kulitku.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/terracotta</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
</resources>